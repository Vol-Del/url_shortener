<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <title>URL Shortener</title>
</head>
<body>
<div class="container">
    <h1>URL Shortener</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="visually-hidden">URL</label>
        <input required placeholder="Url" type="url" id="fullUrl" name="fullUrl" class="form-control mr-2">
        <button class="btn btn-success" type="submit">Shorten</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <th>FULL URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
        </tr>
        </thead>
        <tbody>
        <% shortUrls.forEach(shortUrls => { %>
            <tr>
                <td><a href="<%= shortUrls.full %>"><%= shortUrls.full %></a></td>
                <td><a href="<%= shortUrls.short %>"><%= shortUrls.short %></a></td>
                <td><%= shortUrls.clicks %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>